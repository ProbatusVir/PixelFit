<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Circle (Border) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- Border color -->
        </shape>
    </item>

    <!-- Inner Circle (Padding inside the border) -->
    <item
            android:left="4dp"
            android:top="4dp"
            android:right="4dp"
            android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/> <!-- Background color -->
        </shape>
    </item>

</layer-list>