<?xml version="1.0" encoding="utf-8"?>
<!-- TODO: Fix issue where theres two search bars -->
<androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Instructor"
            android:background="@drawable/gradients" tools:ignore="ExtraText">

    <androidx.cardview.widget.CardView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:queryHint="Search..."
                android:iconifiedByDefault="false"
                android:queryBackground="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_bar" app:layout_constraintVertical_bias="0.5">
        <androidx.cardview.widget.CardView
                android:id="@+id/firstCard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <VideoView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/video1"
                        android:background="@drawable/boarder"/>
                <TextView
                        android:text="@string/title"
                        style="@style/primary_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/video1"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/title" android:textStyle="bold"/>
                <TextView
                        android:text="@string/body"
                        style="@style/body_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/title"
                        android:layout_toEndOf="@id/video1"
                        android:id="@+id/description"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/secondCard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <VideoView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/video2"
                        android:background="@drawable/boarder"/>
                <TextView
                        android:text="@string/title"
                        style="@style/primary_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/video2"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/title2"
                        android:textStyle="bold"/>
                <TextView
                        android:text="@string/body"
                        style="@style/body_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/title2"
                        android:layout_toEndOf="@id/video2"
                        android:id="@+id/description2"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/thirdCard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <VideoView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/video3"
                        android:background="@drawable/boarder"/>
                <TextView
                        android:text="@string/title"
                        style="@style/primary_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/video3"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/title3" android:textStyle="bold"/>
                <TextView
                        android:text="@string/body"
                        style="@style/body_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/title3"
                        android:layout_toEndOf="@id/video3"
                        android:id="@+id/description3"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/fourthCard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <VideoView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/video4"
                        android:background="@drawable/boarder"/>
                <TextView
                        android:text="@string/title"
                        style="@style/primary_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/video4"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/title4" android:textStyle="bold"/>
                <TextView
                        android:text="@string/body"
                        style="@style/body_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/title4"
                        android:layout_toEndOf="@id/video4"
                        android:id="@+id/description4"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/fifthCard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <VideoView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/video5"
                        android:background="@drawable/boarder"/>
                <TextView
                        android:text="@string/title"
                        style="@style/primary_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/video5"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/title5" android:textStyle="bold"/>
                <TextView
                        android:text="@string/body"
                        style="@style/body_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/title5"
                        android:layout_toEndOf="@id/video5"
                        android:id="@+id/description5"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/sixthCard"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <VideoView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/video6"
                        android:background="@drawable/boarder"/>
                <TextView
                        android:text="@string/title"
                        style="@style/primary_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/video6"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/title6" android:textStyle="bold"/>
                <TextView
                        android:text="@string/body"
                        style="@style/body_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/title6"
                        android:layout_toEndOf="@id/video6"
                        android:id="@+id/description6"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_bar"/>
</androidx.constraintlayout.widget.ConstraintLayout>