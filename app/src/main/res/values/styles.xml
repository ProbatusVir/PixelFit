<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="primary_header" parent="android:TextAppearance">
        <item name="fontFamily">@font/inder</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="body_text">
        <item name="fontFamily">@font/sansita</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="login_text">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>