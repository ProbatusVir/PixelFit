<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/SecondFragment">

    <fragment
            android:id="@+id/FirstFragment"
            android:name="com.example.myapplication.FirstFragment"
            android:label="@string/Home_fragment_label"
            tools:layout="@layout/fragment_first"/>
    <fragment
            android:id="@+id/SecondFragment"
            android:name="com.example.myapplication.SecondFragment"
            android:label="@string/Login_fragment_label"
            tools:layout="@layout/fragment_second">


        <action
                android:id="@+id/action_SecondFragment_to_FirstFragment"
                app:destination="@id/FirstFragment"/>
        <action android:id="@+id/action_SecondFragment_to_signUp" app:destination="@id/signUp"/>
    </fragment>
    <fragment android:id="@+id/signUp" android:name="com.example.myapplication.SignUp" android:label="fragment_sign_up"
              tools:layout="@layout/fragment_sign_up">
        <action android:id="@+id/action_signUp_to_SecondFragment3" app:destination="@id/SecondFragment"
        />
        <action android:id="@+id/action_signUp_to_FirstFragment" app:destination="@id/FirstFragment"/>
    </fragment>

</navigation>